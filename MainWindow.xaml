<Window x:Class="ProgPart3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity ChatBot" Height="650" Width="800" MinHeight="650" MinWidth="800"
        Background="Black"
        Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Row for Task button -->
            <RowDefinition Height="Auto"/>
            <!-- Row for Quiz button -->
        </Grid.RowDefinitions>

        <!-- ASCII Art TextBlock -->
        <TextBlock x:Name="AsciiArtBlock"
                   FontFamily="Consolas"
                   FontSize="14"
                   Foreground="LightGreen"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Grid.Row="0"
                   TextWrapping="Wrap" />

        <!-- Response display RichTextBox inside Border -->
        <Border BorderBrush="LightGreen" BorderThickness="2" Grid.Row="1" CornerRadius="4">
            <RichTextBox x:Name="ResponseBlock"
                         FontFamily="Consolas"
                         FontSize="14"
                         Foreground="LightGreen"
                         Background="Black"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         Padding="10" />
        </Border>

        <!-- Input and Send button -->
        <Grid Grid.Row="2" Margin="0,10,0,0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <!-- TextBox with placeholder TextBlock overlay -->
            <Grid>
                <TextBox x:Name="InputBox"
                         FontFamily="Consolas"
                         FontSize="14"
                         Padding="5"
                         Background="Black"
                         Foreground="LightGreen"
                         BorderBrush="LightGreen"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         TextChanged="InputBox_TextChanged"/>

                <!-- Placeholder TextBlock -->
                <TextBlock x:Name="PlaceholderText"
                           Text="Type your message here..."
                           FontFamily="Consolas"
                           FontSize="14"
                           Foreground="Gray"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>
            </Grid>

            <Button Content="Send"
                    Grid.Column="1"
                    Click="Send_Click"
                    Width="100"
                    FontSize="14"
                    FontWeight="Bold"
                    Padding="5"
                    Background="DarkGreen"
                    Foreground="White"
                    BorderBrush="White"
                    Margin="10,0,0,0"/>
        </Grid>

        <!-- Open Task Window Button -->
        <Button Content="Open Tasks"
                Grid.Row="3"
                Width="150"
                Height="35"
                HorizontalAlignment="Center"
                Margin="0,15,0,0"
                FontWeight="Bold"
                Background="DarkGreen"
                Foreground="White"
                BorderBrush="White"
                Click="OpenTasks_Click"/>

        <!-- Take Cybersecurity Quiz Button -->
        <Button Content="Take Cybersecurity Quiz"
                Grid.Row="4"
                Width="200"
                Height="35"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                FontWeight="Bold"
                Background="DarkGreen"
                Foreground="White"
                BorderBrush="White"
                Click="OpenQuiz_Click"/>
    </Grid>
</Window>
